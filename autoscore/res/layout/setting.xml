<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:gravity="center"
    android:orientation="horizontal" >

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_weight="1"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="6"
        android:useDefaultMargins="true" >

        <TextView
            android:id="@+id/tempo"
            android:layout_columnSpan="2"
            android:gravity="center_vertical"
            android:text="Tempo"
            android:textColor="#000000"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/tempoedit"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/key"
            android:layout_columnSpan="2"
            android:text="Key"
            android:textColor="#000000"
            android:textSize="40sp" />

        <Spinner
            android:id="@+id/key1"
            android:layout_columnSpan="1"
            tools:listitem="@android:layout/simple_spinner_item" />

        <Spinner
            android:id="@+id/key2"
            android:layout_columnSpan="1"
            tools:listitem="@android:layout/simple_spinner_item" />

        <TextView
            android:id="@+id/quantize"
            android:layout_columnSpan="2"
            android:text="Quantize"
            android:textColor="#000000"
            android:textSize="40sp" />

        <Spinner
            android:id="@+id/quant"
            android:layout_columnSpan="1"
            tools:listitem="@android:layout/simple_spinner_item" />

        <TextView
            android:id="@+id/triple"
            android:layout_columnSpan="2"
            android:text="Triple"
            android:textColor="#000000"
            android:textSize="40sp" />

        <ToggleButton
            android:id="@+id/Triplecheck"
            android:layout_columnSpan="2"
            android:textOff="none"
            android:textOn="Check" />

        <TextView
            android:id="@+id/meter"
            android:layout_columnSpan="2"
            android:text="Meter"
            android:textColor="#000000"
            android:textSize="40sp" />

        <Spinner
            android:id="@+id/denom"
            android:layout_columnSpan="1"
            tools:listitem="@android:layout/simple_spinner_item" />

        <Spinner
            android:id="@+id/numer"
            android:layout_columnSpan="1"
            tools:listitem="@android:layout/simple_spinner_item" />

        <TextView
            android:id="@+id/score"
            android:layout_columnSpan="2"
            android:text="Score"
            android:textColor="#000000"
            android:textSize="40sp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_columnSpan="2"
			 >

            <RadioButton
                android:id="@+id/highscore"
                android:layout_width="wrap_content"
                android:checked="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="높은음자리" />

            <RadioButton
                android:id="@+id/lowscore"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="낮은음자리" />

        </RadioGroup>

    </GridLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" >

            <Button
                android:id="@+id/stanleft"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:text="◁"
                android:textSize="30sp" />

            <Button
                android:id="@+id/standard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:text="Standard"
                android:textSize="20sp" />

            <Button
                android:id="@+id/stanright"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:text="▷"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/tunestart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:src="@drawable/play" />

            <TextView
                android:id="@+id/tune"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="C"
                android:textColor="#000000"
                android:textSize="100sp" />

            <ImageButton
                android:id="@+id/tunestop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:src="@drawable/pause" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1" >

            <Button
                android:id="@+id/playbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START"
                android:textSize="70sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>